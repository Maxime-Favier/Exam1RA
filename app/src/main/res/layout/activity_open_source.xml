<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OpenSource" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp" android:layout_marginEnd="3sp" android:layout_marginTop="3sp"
                    android:paddingStart="1sp" android:layout_marginBottom="3sp" android:paddingEnd="1sp"
                    android:paddingTop="1sp" android:paddingBottom="1sp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="@string/licences"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView3"
                            android:textColor="@color/colorText" android:textSize="24sp"
                            android:gravity="center_horizontal|center_vertical"/>
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_marginStart="3sp"
                            android:layout_marginEnd="3sp" android:layout_marginTop="3sp"
                            android:layout_marginBottom="3sp"
                            android:paddingStart="1sp" android:paddingEnd="1sp" android:paddingTop="1sp"
                            android:paddingBottom="1sp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:text="@string/app_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView4"
                                    android:textColor="@color/colorText" android:textSize="18sp"/>
                            <androidx.constraintlayout.widget.Guideline
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/guideline"/>
                            <TextView
                                    android:text="@string/licence_Exam1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView15"
                                    android:textColor="@color/colorText" android:layout_marginStart="3sp"
                                    android:layout_marginEnd="3sp"/>
                            <TextView
                                    android:text="@string/licence_gnuV3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView16"
                                    android:layout_marginStart="5sp" android:layout_marginEnd="5sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_marginStart="3sp"
                            android:layout_marginTop="3sp" android:layout_marginEnd="3sp"
                            android:layout_marginBottom="3sp"
                            android:paddingStart="1sp" android:paddingEnd="1sp" android:paddingTop="1sp"
                            android:paddingBottom="1sp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:text="@string/licence_materialIcons"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView17"
                                    android:textColor="@color/colorText" android:textSize="18sp"/>
                            <androidx.constraintlayout.widget.Guideline
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/guideline2"/>
                            <TextView
                                    android:text="@string/licence_apache"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView18"
                                    android:layout_marginStart="5sp" android:layout_marginEnd="5sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_marginStart="3sp"
                            android:layout_marginEnd="3sp" android:layout_marginTop="3sp"
                            android:layout_marginBottom="3sp"
                            android:paddingStart="1sp" android:paddingTop="1sp" android:paddingEnd="1sp"
                            android:paddingBottom="1sp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:text="@string/MPChart"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView19"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorText"/>
                            <androidx.constraintlayout.widget.Guideline
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/guideline3"/>
                            <TextView
                                    android:text="@string/C_MPChart"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView20"
                                    android:textColor="@color/colorText" android:layout_marginStart="3sp"
                                    android:layout_marginEnd="3sp"/>
                            <TextView
                                    android:text="@string/licence_apache"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView21"
                                    android:layout_marginStart="5sp" android:layout_marginEnd="5sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>