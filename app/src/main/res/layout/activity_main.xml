<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:id="@+id/linearLayout">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp" android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="5dp">
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="@string/chose_thema"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView"
                                android:textColor="@color/colorText"
                                android:textSize="30sp" android:layout_marginTop="5sp"
                                android:layout_weight="1" android:layout_marginStart="5sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                                android:layout_width="434dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="3sp" android:layout_weight="1" android:layout_marginEnd="5sp"
                                android:layout_marginStart="5sp" android:layout_marginBottom="3sp">
                            <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <TextView
                                            android:text="@string/legislation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/textView1"
                                            android:textSize="24sp" android:textColor="@color/colorSecondary"
                                            android:drawableEnd="@drawable/ic_book_24dp"
                                            android:layout_weight="1"
                                            android:drawableStart="@drawable/ic_arrow_drop_down_24dp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <View
                                            android:id="@+id/divider"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="?android:attr/listDivider"
                                            android:layout_weight="1"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_codeQ"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox"
                                            android:textSize="18sp" android:layout_weight="1"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_adaptation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox2"
                                            android:textSize="18sp" android:layout_weight="1"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_antennes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox3"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_emission"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox4"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_cem"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox5"
                                            android:textSize="18sp" android:layout_weight="1"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_indicatifs"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox6"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_entrainement"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox7"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_sanctions"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox8"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_epellation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox9"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_messages"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox10"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                            </TableLayout>
                        </androidx.cardview.widget.CardView>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_weight="1"
                                android:layout_marginStart="5sp" android:layout_marginEnd="5sp"
                                android:layout_marginTop="3sp"
                                android:layout_marginBottom="3sp">
                            <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <TextView
                                            android:text="@string/technique"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/textView6"
                                            android:textSize="24sp" android:textColor="@color/colorSecondary"
                                            android:layout_weight="1"
                                            android:drawableEnd="@drawable/ic_build_24dp"
                                            android:drawableStart="@drawable/ic_arrow_drop_down_24dp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <View
                                            android:id="@+id/divider2"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="?android:attr/listDivider"
                                            android:layout_weight="1"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_lignes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox11"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_resistancesCouleurs"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox12"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_condoBob"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox13"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_alternatif"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox14"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_ampli"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox15"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_electricite"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox16"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_resistancesGroupes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox17"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_etagesRF"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox18"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_synoptiques"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox19"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                                    <CheckBox
                                            android:text="@string/theme_transfo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/checkBox20"
                                            android:layout_weight="1" android:textSize="18sp"/>
                                </TableRow>
                            </TableLayout>
                        </androidx.cardview.widget.CardView>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>